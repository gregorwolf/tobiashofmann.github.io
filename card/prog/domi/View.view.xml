<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"	  
    xmlns="sap.m" 
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"	  
    displayBlock="true"
    controllerName="abapconf.2022.org.card.prog.domi.Main">

    <Avatar
        src="./card/prog/domi/DomiBigl.jpg"
        displaySize="Custom"
		customDisplaySize="250px"
        showBorder="true"
        press="onPress"/>
    <VBox >
       <FlexBox alignItems="Start" justifyContent="SpaceBetween">
			<Label text="{i18n>cardCompany} " labelFor="txtCompany" /> 
            <Text id="txtCompany" text="Cadaxo GmbH" />
		</FlexBox>
        <FlexBox alignItems="Start" justifyContent="SpaceBetween">
			<Label text="{i18n>cardPosition}" /> 
            <Text text="ADT or what is SE80?" />
		</FlexBox>        
    </VBox>
</mvc:View>